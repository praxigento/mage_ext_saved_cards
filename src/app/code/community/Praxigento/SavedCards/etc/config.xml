<!-- http://www.magentocommerce.com/wiki/5_-_modules_and_development/reference/module_config.xml -->
<config>
    <modules>
        <Praxigento_SavedCards>
            <version>0.0.1</version>
        </Praxigento_SavedCards>
    </modules>
    <global>
        <blocks>
            <prxgt_savedcards_block>
                <class>Praxigento_SavedCards_Block</class>
            </prxgt_savedcards_block>
        </blocks>
        <events>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <prxgt_savedcards_observer>
                        <type>singleton</type>
                        <class>prxgt_savedcards_model/own_observer</class>
                        <method>onAdminhtmlSalesOrderCreateProcessData</method>
                    </prxgt_savedcards_observer>
                </observers>
            </adminhtml_sales_order_create_process_data>
            <payment_info_block_prepare_specific_information>
                <observers>
                    <prxgt_savedcards_observer>
                        <type>singleton</type>
                        <class>prxgt_savedcards_model/own_observer</class>
                        <method>onPaymentInfoBlockPrepareSpecificInformation</method>
                    </prxgt_savedcards_observer>
                </observers>
            </payment_info_block_prepare_specific_information>
            <sales_convert_quote_address_to_order>
                <observers>
                    <prxgt_savedcards_observer>
                        <type>singleton</type>
                        <class>prxgt_savedcards_model/own_observer</class>
                        <method>onSalesConvertQuoteAddressToOrder</method>
                    </prxgt_savedcards_observer>
                </observers>
            </sales_convert_quote_address_to_order>
            <sales_convert_quote_payment_to_order_payment>
                <observers>
                    <prxgt_savedcards_observer>
                        <type>singleton</type>
                        <class>prxgt_savedcards_model/own_observer</class>
                        <method>onSalesConvertQuotePaymentToOrderPayment</method>
                    </prxgt_savedcards_observer>
                </observers>
            </sales_convert_quote_payment_to_order_payment>
            <sales_model_service_quote_submit_success>
                <observers>
                    <prxgt_savedcards_observer>
                        <type>singleton</type>
                        <class>prxgt_savedcards_model/own_observer</class>
                        <method>onSalesModelServiceQuoteSubmitSuccess</method>
                    </prxgt_savedcards_observer>
                </observers>
            </sales_model_service_quote_submit_success>
        </events>
        <fieldsets>
            <sales_convert_quote_payment>
                <prxgt_savedcards_id>
                    <to_order_payment>*</to_order_payment>
                </prxgt_savedcards_id>
            </sales_convert_quote_payment>
        </fieldsets>
        <helpers>
            <!-- Default helper for module (prevents errors like "Class 'Namespace_Module_Helper_Data' not found in") -->
            <!-- used in <node module="nspace_module_helper"> nodes -->
            <prxgt_savedcards_helper>
                <class>Praxigento_SavedCards_Helper</class>
            </prxgt_savedcards_helper>
        </helpers>
        <models>
            <prxgt_savedcards_model>
                <class>Praxigento_SavedCards_Model</class>
                <resourceModel>prxgt_savedcards_model_resource</resourceModel>
            </prxgt_savedcards_model>
            <prxgt_savedcards_model_resource>
                <class>Praxigento_SavedCards_Resource</class>
                <entities>
                    <own_registry_card>
                        <table>prxgt_savedcards_registry_card</table>
                    </own_registry_card>
                </entities>
            </prxgt_savedcards_model_resource>
        </models>
        <resources>
            <prxgt_savedcards_setup>
                <setup>
                    <module>Praxigento_SavedCards</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </prxgt_savedcards_setup>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <prxgt_savedcards_admin_layout>
                    <file>prxgt/savedcards/layout.xml</file>
                </prxgt_savedcards_admin_layout>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <payment>
            <prxgt_savedcards_method translate="title" module="prxgt_savedcards_helper">
                <!-- hardcoded values -->
                <model>prxgt_savedcards_model/own_payment_method</model>
                <order_status>processing</order_status>
                <!-- configurable parameters -->
                <active>0</active>
                <title>Pay by Card</title>
                <cctypes>AE,VI,MC,DI</cctypes>
            </prxgt_savedcards_method>
        </payment>
    </default>
</config>